<!DOCTYPE html>
<html>
    <head>
        <!-- These meta tags come first. -->
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">

        <title>@Page.Title - @Page.SubTitle</title>
        
        @RenderSection("head", required: false)
        
        <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
        <link href="~/Content/mla-core.css" rel="stylesheet" type="text/css" />
        <link href="~/Content/mla-content-page.css" rel="stylesheet" type="text/css" />

        <script src="~/Scripts/jquery-3.1.1.min.js"></script>
        <script src="~/Scripts/bootstrap.min.js"></script>
    </head>
    <body>
        <nav id="content-page-nav-bar" class="navbar navbar-fixed-top" role="navigation">
            <div class="container-fluid">
                <!-- Brand and toggle get grouped for better mobile display -->
                <div class="navbar-header">
                    <a class="navbar-brand" href="~/Landing.cshtml"><img src="~/Images/mla-logo-black.jpg" /></a>
                    <button type="button" class="navbar-toggle collapsed" style="color: #fff;" data-toggle="collapse" data-target="#navbar-collapse-menu">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="glyphicon glyphicon-menu-hamburger"></span>
                    </button>
                </div>

                <!-- Collect the nav links, forms, and other content for toggling -->
                <div id="navbar-collapse-menu" class="collapse navbar-collapse pull-right">
                    <ul class="nav navbar-nav">
                        <li class="dropdown">
                            <a href="~/About.cshtml" class="dropdown-toggle" data-toggle="dropdown">About <span class="caret"></span></a>
                            <ul class="dropdown-menu">
                                <li><a href="~/About.cshtml">About</a></li>
                                <li><a href="~/MadelineLester.cshtml">Madeline Lester</a></li>
                                <li><a href="~/IsabellaKarpathios.cshtml">Isabella Karpathios</a></li>
                            </ul>
                        </li>
                        <li>
                            <a href="~/Projects.cshtml">Projects</a>
                        </li>
                        <li>
                            <a href="~/Contact.cshtml">Contact</a>
                        </li>
                        <li>
                            <a href="~/Media.cshtml">Media</a>
                        </li>
                        <li>
                            <a href="~/Blog.cshtml">Blog</a>
                        </li>
                    </ul>
                </div><!-- /.collapse navbar-collapse pull-right -->
            </div><!-- /.container-fluid -->
        </nav>

        <div class="container-fluid">
            <div class="row" style="margin-top: 100px;">
                <div class="col-md-2 col-lg-3"></div>
                <div class="col-sm-12 col-md-8 col-lg-6">
                    @RenderBody()
                </div>
                <div class="col-md-2 col-lg-3"></div>
            </div>
        </div>

        <script type="text/javascript">
            $(document).ready(function () {
                $(".dropdown-toggle").dropdown();
            });
        </script>
</body>
</html>
